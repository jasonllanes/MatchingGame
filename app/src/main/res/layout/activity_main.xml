<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â™¥ Matching Game â™¥"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:background="@drawable/image_default"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:textAlignment="center"
                android:text="GAME MECHANICS: \nJust match up 2 pairs of images until you paired them all"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/red" />



            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:columnCount="3"
                android:rowCount="4">
            </GridLayout>

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰ Congratulations you paired them all ðŸŽ‰"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/red"
                android:layout_marginTop="20dp"/>



        </LinearLayout>

    </ScrollView>



</LinearLayout>